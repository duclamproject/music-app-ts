extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container.my-3
        .row 
            .col-12 
                +box-head(pageTitle)
        
        .row
            each item in favoriteSongs
                .col-6.mb-3
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${item.song.slug}`)
                                img(src=item.song.avatar, alt="avatar")
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${item.song.slug}`) #{item.song.title}
                            div(class="inner-singer") <i class="fa-solid fa-microphone-lines"></i> #{item.singer.fullName}
                            div(class="inner-heart active" button-favorite=item.song.id) <i class="fa-regular fa-heart" ></i> Yêu thích
                            div(class="inner-time") <i class="fa-regular fa-clock"></i> Hôm nay
